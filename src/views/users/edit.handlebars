<!-- Main Content -->
<main class="body-content">
    <div class="ms-content-wrapper">
        <div class="row">
            <div class="col-md-12">
                <div class="ms-panel"> 
                        <div class="ms-panel-header row ms-panel-custom">
                            <a>
                                <h6> Edit users </h6>
                            </a>
                            <a href="{{baseUrl}}admin/users" class="btn btn-pill btn-primary text-right">Manage
